{
    "manifest_version": 2,
    "name": "Top Shot Sniper 2",
    "version": "2.0",
    "description": "Top Shot Sniper2",
    "browser_action": {
      "default_icon": "icon1.png",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": [
          "https://recnepsbackwards.github.io/*"        
        ],
        "js": [
          "scripts/content_script.js"
        ],
        "css": [
          "styles/styles.css"
        ]
      }
    ],
    "background" : {
      "scripts" : [
        "scripts/background.js"
      ],
      "persistent": false
    },

    "permissions": [
      "tabs",
      "activeTab" 
    ]
}
